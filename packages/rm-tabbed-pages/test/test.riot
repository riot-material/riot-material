<test>
    <rm-tabbed-pages>
        <div slot="Prova if" if={ state.hidden }>
            <nested-component></nested-component>
            <button onclick={ onclick }>Toggle</button>
        </div>
        <div slot="Other tab">
            OK <button onclick={ onclick }>Toggle</button>
        </div>
        <div slot="YEAH">
            This is great! <button onclick={ onclick }>Toggle</button>
            <div>ALTRO TESTO + LUNGO</div>
        </div>
        <div slot="PROVA ASYNC" if={ state.loaded }>
            OK
        </div>
    </rm-tabbed-pages>
    <div>TESTO ESTERNO</div>

    <script>
        export default {
            state: {
                hidden: false,
                loaded: false
            },
            onclick() {
                this.update({ hidden: !this.state.hidden });
            },
            onMounted() {
                setTimeout(() => this.update({ loaded: true }), 1000);
            }
        }
    </script>
</test>